<Window x:Class="DialogueImplementationTool.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dialogue Implementation Tool" Height="400" Width="400"
        MinHeight="400" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0"
                Content="Select File" FontSize="36"
                Margin="10"
                Click="SelectFile_OnClick"/>
        
        <Button Grid.Row="1"
                Content="Select Folder" FontSize="36"
                Margin="10"
                Click="SelectFolder_OnClick"/>
    </Grid>
</Window>
