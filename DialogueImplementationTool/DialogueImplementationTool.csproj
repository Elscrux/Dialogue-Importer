      </Compile>
      <Compile Update="Dialogue\SceneGeneric.cs">
        <DependentUpon>SceneFactory.cs</DependentUpon>
      </Compile>
      <Compile Update="Dialogue\Greeting.cs">
        <DependentUpon>OneLinerFactory.cs</DependentUpon>
      </Compile>
      <Compile Update="Dialogue\Idle.cs">
        <DependentUpon>OneLinerFactory.cs</DependentUpon>
      </Compile>
