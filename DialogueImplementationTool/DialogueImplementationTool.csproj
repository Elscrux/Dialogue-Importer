        <DependentUpon>DialogueFactory.cs</DependentUpon>
      </Compile>
      <Compile Update="Dialogue\SceneFactory.cs">
        <DependentUpon>DialogueFactory.cs</DependentUpon>
      </Compile>
      <Compile Update="Parser\OpenDocumentTextParser.cs">
